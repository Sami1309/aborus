{
  "manifest_version": 3,
  "name": "Modeler Recorder Monitor",
  "version": "0.4.0",
  "description": "Preview automation modeler events and AI flow summaries directly inside recording sessions.",
  "permissions": ["storage", "tabs"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Open Modeler Monitor"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["content.css"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
